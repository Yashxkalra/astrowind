---
import Headline from '../blog/Headline.astro';
import ServicesCard from './ServicesCard.astro';
import { Debug } from 'astro:components';

export interface Props {
  title?: string;
  items?: Array<{
    src: string;
    image: {
      src: string;
      alt: string;
    };
    title: string;
  }>;
}

const { title = 'Design for what you need', items = [] } = Astro.props;
---

<div class="bg-[#F5F5F5] dark:bg-[--aw-color-bg-cards] p-12">
  <h2 class="mb-8">{title}</h2>
  <h2 class="text-3xl font-bold tracking-tight sm:text-4xl sm:leading-none group font-heading mb-2" set:html={title} />
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    {items.map((item, index) => <ServicesCard key={index} item={item} />)}
  </div>
</div>
